        <ToolbarItem x:Name="BtnSave"
                     Text="Save"
                     Clicked="BtnSave_Clicked"/>
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Entry x:Name="TxtExperience"
               Placeholder="Write your experience (250)"/>
    </StackLayout>
</ContentPage>